<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="form-post">
        <h1>Personnalisez vos avantages préférés 😍</h1>
        <%= simple_form_for(@post) do |f| %>
        <div class="row">
          <%= f.association :categories, as: :check_boxes %>
          <%= f.submit "Sauvegarder", class: "btn btn-primary"  %>
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
